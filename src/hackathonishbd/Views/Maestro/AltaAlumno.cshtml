@{    
    ViewBag.Title = "Alta alumno";
}
<h1>Alta alumno</h1>
<form action="/Maestro/AltaAlumno" method="post">
    <div class="form-group">
        <label for="ID_usuario">Id Alumno</label>
        <input class="form-control" type="text" pattern="[0-9]+" name="ID_usuario" placeholder="Id Alumno"/>
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input class="form-control" type="text" pattern="[A-z ]+" name="Nombre" placeholder="Nombre"/>
    </div>
    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input class="form-control" type="text" pattern="[A-z ]+" name="Apellido" placeholder="Apellido"/>
    </div>
    <div class="form-group">
        <label for="Clave">Clave</label>
        <input class="form-control" type="password" name="Clave" placeholder="Clave"/>
    </div>
    <div class="form-group">
        <label for="Sexo">Sexo</label>
        <input class="form-control" type="text" pattern="[MF]" name="Sexo" placeholder="Sexo"/>
    </div>
    <div class="form-group">
        <label for="B_activo">Activo</label>
        <input class="form-control" type="checkbox" name="B_activo" value="true"/>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Aceptar"/>
    </div>
</form>

